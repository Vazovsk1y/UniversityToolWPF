<Window x:Class="UniversityTool.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm ="clr-namespace:UniversityTool.ViewModels"
        xmlns:vmcontrols="clr-namespace:UniversityTool.ViewModels.ControlsViewModels"
        xmlns:c="clr-namespace:UniversityTool.Views.Controls"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel, d:IsDesignTimeCreatable=True}"
        Title="{Binding WindowTitle}" Height="650" Width="950">
    
    <Window.Resources>
        <Style TargetType="MenuItem" x:Key="menuItem">
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontSize" Value="23"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Menu" x:Key="menu">
            <Setter Property="Background" Value="LightGray"/>
        </Style>

        <Style TargetType="TreeViewItem" x:Key="treeViewItem">
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Menu Style="{StaticResource menu}">
                <MenuItem Header="File" Style="{StaticResource menuItem}" >
                    <MenuItem Header="Add Department" Style="{StaticResource menuItem}" Command="{Binding AddDepartamentCommand}"/>
                </MenuItem>
                <MenuItem Header="Structure" Style="{StaticResource menuItem}">
                    <MenuItem Header="AddGroup" Style="{StaticResource menuItem}" Command="{Binding AddGroupCommand}"/>
                </MenuItem>
                <MenuItem Header="View" Style="{StaticResource menuItem}"/>
                <MenuItem Header="Help" Style="{StaticResource menuItem}"/>
            </Menu>
        </Grid>

        <Grid Grid.Row="1" Background="Gray" >
            <TextBlock Text="TOOL BAR MENU" 
                       HorizontalAlignment="Center"
                       />
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <c:TreeControl DataContext="{Binding TreeView}"
                               d:DataContext="{d:DesignInstance vmcontrols:TreeViewViewModel,d:IsDesignTimeCreatable=True}"/>
            </Grid>

            <Grid Grid.Column="1">
                <TabControl>
                    <TabItem Header="Студенты">
                        <GroupBox Header="{Binding TreeView.SelectedGroup.Title}">
                            <DataGrid ItemsSource="{Binding TreeView.SelectedGroup.Students}" AutoGenerateColumns="False" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Имя" Binding="{Binding Name}"/>
                                    <DataGridTextColumn Header="Фамилия" Binding="{Binding SecondName}"/>
                                    <DataGridTextColumn Header="Отчество" Binding="{Binding ThirdName}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </TabItem>
                </TabControl>
            </Grid>

        </Grid>

    </Grid>
</Window>
